                        span cd = 30
                        br
                        input(type="radio" class="answer" name="c1" id="c1-no" value="no")
                        label(for="no") No 
                        span cd = 0
                    td 
                        textarea(class="comment" name="c1" rows="4" cols="30" id="c1-comment")
                    td
